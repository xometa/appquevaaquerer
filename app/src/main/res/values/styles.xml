<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorPrimaryDark">@color/status_bar_home</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--Personalización del texto de nuestro action bar-->
        <item name="android:actionMenuTextColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">15sp</item>
        <!--ponemos en blanco el status bar y en gris sus letras-->
        <item name="android:windowLightStatusBar">true</item>
        <!--
            Este icono sera visible en nuestro action bar siempre y cuando el activity que queramos
            pongamos:
            getSupportActionBar().setDisplayHomeAsUpEnabled(true);
        -->
        <!--
            llamando el style de nuestro action bar
        -->
        <item name="actionBarStyle">@style/Theme</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="actionOverflowMenuStyle">@style/ubication</item>
    </style>
    <!--para el menú de ubicación-->
    <style name="ubication" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:background">@color/icons</item>
        <item name="android:dropDownHorizontalOffset">-6dp</item>
    </style>
    <!--transparent bottom sheet-->
    <style name="BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent_color</item>
    </style>
    <!--
        Este estilo lo que hace es quitarme la sombra y el borde inferior, que se genera por defecto
        en el action bar, para una mayor elegancia, de igual manera el titulo lo quita.
    -->
    <style name="Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--Personalización de nuestro action bar-->
        <item name="android:background">#FAFAFA</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--
        Aquí se define el tamaño de la letra del menu de navegacion de abajo
    -->
    <style name="bottonnavigationview" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">12sp</item>
    </style>

    <!--Este estilo es para bolar el action bar del panel admin-->
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/status_bar_home</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--Personalización del texto de nuestro action bar-->
        <item name="android:actionMenuTextColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">15sp</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--font for navigation drawer-->
    <style name="NavigationViewFont">
        <item name="fontFamily">@font/roboto</item>
    </style>
    <!--i do'nt like-->
    <style name="MyTransparentDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@drawable/background_dialog</item>
        <item name="android:background">#32FFFFFF</item>
    </style>

    <!--transparent ActionBar-->
    <style name="ThemeTransparent" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/transparent_color</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar.Transparent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_white</item>
    </style>

    <style name="AppTheme.ActionBar.Transparent" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/transparent_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Information" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/status_bar_home</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--Personalización del texto de nuestro action bar-->
        <item name="android:actionMenuTextColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
    </style>
</resources>
